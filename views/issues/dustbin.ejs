<% include ../partials/flash %>


<%# SECOND PART: LISTING ANIMALS %>
<div class="row">
  <h2>My previous issue requests</h2>
  <% issues.forEach(function(issue) { %>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= issue.title %>
            <small>(Status: <%= issue.status %>)</small>
          </h3>
        </div>
        <div class="panel-body">
          Problem: <%= issue.problem %>
          <br><br>
          <% if( issue.status === 'opened') {%>
            <a
              class="btn btn-success"
              href="/issues/<%=issue.id%>?status=closed">
              Close
            </a>
          <% } else { %>
            <a
              class="btn btn-danger"
              href="/issues/<%=issue.id%>?status=opened">
              Open
            </a>
          <% }%>
          <a href="/issues/<%=issue.id%>" class="btn btn-primary">
            View Issue
          </a>
          <br><br>
          <form
            method="POST"
            action="/issues/<%= issue.id %>?_method=DELETE"
          >
            <button class="btn btn-danger" type="submit">
              Delete Issue
            </button>
          </form>
        </div>
      </div>
      <pre><%= issue %></pre>
    </div>
  <% }) %>
</div>
