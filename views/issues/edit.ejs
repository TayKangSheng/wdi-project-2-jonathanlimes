<form method="post" action="/issues/<%= issueToEdit.id %>/edit?_method=PUT">
  <h2>Edit issue request</h2>
  <div class="row">
    <div class="form-group col-md-6">
      <input type="text" class="form-control" name="issues[title]" id="title" value="<%= issueToEdit.title %>">
    </div>
    <div class="form-group col-md-6">
      <input type="text" class="form-control" name="issues[address]" id="address" value="<%= issueToEdit.address %>">
    </div>
    <div class="form-group col-md-12">
      <input type="text" class="form-control" name="issues[problem]" id="problem" value="<%= issueToEdit.problem %>">
    </div>
    <div class="form-group col-md-12">
      <button type="submit" class="btn btn-success btn-block">Resubmit issue</button>
    </div>
  </div>
</form>
