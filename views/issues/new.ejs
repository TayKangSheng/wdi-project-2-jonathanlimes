<h1>New.ejs: Add new issue request</h1>

<%# FIRST PART: THE FORM %>
<form method="post" action="/issues">
  <div class="row">
    <div class="form-group col-md-4">
      <input type="text" class="form-control" name="issues[title]" id="title" placeholder="Title">
    </div>
    <div class="form-group col-md-2">
      <input type="text" class="form-control" name="issues[nearestBlockNum]" id="nearestBlockNum" placeholder="Nearest Block">
    </div>
    <div class="form-group col-md-6">
      <input type="text" class="form-control" name="issues[street]" id="street" placeholder="Street Name">
    </div>
    <div class="form-group col-md-12">
      <input type="text" class="form-control" name="issues[problem]" id="problem" placeholder="Problem">
    </div>
    <div class="form-group col-md-12">
      <button type="submit" class="btn btn-warning btn-block">Submit Issue</button>
    </div>
  </div>
</form>
